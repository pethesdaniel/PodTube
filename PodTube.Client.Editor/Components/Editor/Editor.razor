@using PodTube.Client.Editor.Services;
@using PodTube.Shared.Models.Editor;
@inject TimelineService timelineService;

<PodTube.Client.Editor.Components.AssetBrowser.AssetBrowser AddAssetToTimeline=OnAddAssetToTimeline></PodTube.Client.Editor.Components.AssetBrowser.AssetBrowser>
<PodTube.Client.Editor.Components.Timeline.Timeline Value="timelineService.Timeline"></PodTube.Client.Editor.Components.Timeline.Timeline>

@code {
    [Parameter] public List<Asset> AssetsOnTimeline { get; set; } = new List<Asset>();

    public void OnAddAssetToTimeline(Asset asset) {
        timelineService.AddAssetToTimeline(asset);
    }
}
