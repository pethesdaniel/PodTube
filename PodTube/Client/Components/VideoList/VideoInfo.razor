@using PodTube.Shared.Models.DTO;
<MudStack Row="true">
    <MudImage Src="@Video.Thumbnail" Height="200" Width="400" ObjectFit="ObjectFit.Cover"></MudImage>
    <MudStack Justify="Justify.Center">
        <MudText Typo="Typo.h5">@Video.Name</MudText>
        <MudText Typo="Typo.body2">@Video.Description</MudText>
        <MudText Typo="Typo.body2">@Video.DatePublished</MudText>
    </MudStack>
</MudStack>
@code {
    [Parameter] public VideoDto Video { get; set; }
}
