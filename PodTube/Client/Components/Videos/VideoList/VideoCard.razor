@using PodTube.Shared.Models.DTO;
<MudCard>
    <MudCardContent>
        <VideoInfo Video="Video"></VideoInfo>
    </MudCardContent>
    <MudCardActions>
        @if (ShowPlayButton) {
            <MudButton Variant="Variant.Text" Color="Color.Primary" @onclick="async () => await PlayPressed.InvokeAsync(Video.Id ?? 0)">Play</MudButton>
        }
        @if (ShowSaveButton) {
            <MudButton Variant="Variant.Text" Color="Color.Primary" @onclick="async () => await SavePressed.InvokeAsync(Video.Id ?? 0)">Save</MudButton>
        }
    </MudCardActions>
</MudCard>
@code {
    [Parameter] public VideoDto Video { get; set; }
    [Parameter] public EventCallback<long> PlayPressed { get; set; }
    [Parameter] public EventCallback<long> SavePressed { get; set; }
    [Parameter] public bool ShowSaveButton { get; set; } = true;
    [Parameter] public bool ShowPlayButton { get; set; } = true;
}
