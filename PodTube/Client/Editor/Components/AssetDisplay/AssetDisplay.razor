@using PodTube.Shared.Models.Editor;
<RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.Start" Gap="1rem" Class="rz-p-4">
    @if (Value.Url != null) {
        @if (!Value.IsAudio) {
            <RadzenImage Path="@Value.Url" Style="max-width: 100px; max-height: 100px;" class="rz-border-radius" />
        }
    }
    <RadzenText TextStyle="TextStyle.Body1"><b>@(Value.Name)</b></RadzenText>
</RadzenStack>
